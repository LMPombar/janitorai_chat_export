{
  "manifest_version": 3,
  "name": "JanitorAI Chat Export",
  "version": "1.0",
  "description": "Export chats from JanitorAI",
  "background": {
    "service_worker": "background.js",
    "type": "module"
  },
  "action": {
    "default_popup": "popup.html",
    "default_icon": "icon.png"
  },
  "content_scripts": [
    {
      "matches": ["https://janitorai.com/*"],
      "js": ["script.js"],
      "run_at": "document_end"
    }
  ],
  "web_accessible_resources": [
    {
      "resources": ["docx.min.js", "export_csv.js", "export_word.js"],
      "matches": ["<all_urls>"]
    }
  ],
  "permissions": [
      "scripting",
      "activeTab",
      "downloads",
      "webRequest"
  ],
  "host_permissions": ["https://janitorai.com/*"]

}
