{
  "manifest_version": 3,
  "name": "JanitorAI Chat Export",
  "version": "1.0",
  "description": "Exporta chats de JanitorAI a CSV o Word",
  "permissions": ["scripting", "activeTab", "downloads"],
  "host_permissions": ["https://janitorai.com/*"],
  "background": {
    "service_worker": "background.js"
  },
  "action": {
    "default_popup": "popup.html",
    "default_icon": "icon.png"
  },
  "content_scripts": [
    {
      "matches": ["https://janitorai.com/*"],
      "js": ["script.js"]
    }
  ]
}
